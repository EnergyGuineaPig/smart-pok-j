//YWROBOT
//Compatible with the Arduino IDE 1.0
//Library version:1.1
#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,20,4);  // set the LCD address to 0x27 for a 16 chars and 2 line display

void setup()
{
pinMode(13, OUTPUT);
pinMode(1, INPUT);

}


void loop()
{
  lcd.init();                      // initialize the lcd 
  lcd.init();
  // Print a message to the LCD.
  lcd.backlight();
  lcd.setCursor(3,0);
  lcd.print("smart pokoj");
  delay(500);
  lcd.backlight();
  lcd.setCursor(3,0);
  lcd.print("systemy                      ");
  delay(500);
  lcd.backlight();
  lcd.setCursor(3,0);
  lcd.print("gotowe                      ");
  delay(500);
  if(digitalRead(1 == HIGH)){
    digitalWrite(13, HIGH);
  } else {
    digitalWrite(13, LOW);
  }

}
